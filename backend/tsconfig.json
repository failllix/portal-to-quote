{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@/*": [
        "../*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
