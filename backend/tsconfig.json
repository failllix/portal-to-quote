{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["esnext", "dom"],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "incremental": true,
    "outDir": "./dist"
  },
  "exclude": ["node_modules"]
}
